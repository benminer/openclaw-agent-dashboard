{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../.build/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/routes/*": ["routes/*"],
      "@/middleware/*": ["middleware/*"]
    }
  },
  "include": ["./**/*.ts"]
}
